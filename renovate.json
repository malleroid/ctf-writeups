{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^Dockerfile$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\s+ARG \\S+_VERSION=(?<currentValue>.*)"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "crate"
      ],
      "groupName": "mdbook and plugins",
      "automerge": false,
      "matchPackageNames": [
        "/^mdbook/"
      ]
    }
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Asia/Tokyo"
}
